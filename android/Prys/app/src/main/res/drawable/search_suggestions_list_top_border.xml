<?xml version="1.0" encoding="utf-8"?>
<!-- Basically draw 2 rectangles, one rectangle (border color) is bigger than the other (background color) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <stroke android:width="1dp" android:color="@color/search_suggestions_list_border_color" />
            <solid android:color="@color/search_suggestions_list_border_color" />

        </shape>
    </item>

    <!-- This is for border bottom but
    you can change this according to your need -->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <stroke android:width="1dp" android:color="@color/search_suggestions_list_background_color" />
            <solid android:color="@color/search_suggestions_list_background_color" />
        </shape>
    </item>

</layer-list>